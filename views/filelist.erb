<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="/stylesheets/main.css">
    <title>Dynamic Directory Index</title>
  </head>
  
  <body>
    <table id='list'>
      <tr class='desc'>
        <td colspan="2"><h3>Here are all available files!</h3></td>
      </tr>
      <% @list.each do |name| %>
      <tr class="link">
        <td colspan="2"><%= name %></td>
      </tr>
      <% end %>
      <tr class='desc'>
        <td colspan="2">Sort files by:</td>
      </tr>
      <tr>
        <td class="link">Ascending</td>
        <td class="link">Descending</td>
      </tr>
    </table>
  </body>
</html>
